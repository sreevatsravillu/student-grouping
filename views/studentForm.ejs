<!DOCTYPE html>
<html>
<head>
    <title>Student Skills Form</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mui/material@latest/dist/mui-styles.min.css">
    <style>
        body {
            font-family: 'Roboto', Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .blurred-image {
            width: 100%;
            height: auto;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
        }

        .form-title {
            text-align: center;
            color: #c8102e;
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-section {
            padding: 20px;
            margin-bottom: 30px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            background-color: #fafafa;
        }

        .form-field {
            margin-bottom: 20px;
        }

        .field-label {
            display: block;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .text-input, .select-input {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
            transition: border-color 0.2s;
        }

        .text-input:focus, .select-input:focus {
            border-color: #c8102e;
        }

        .radio-group {
            display: flex;
            gap: 20px;
        }

        .slider-container {
            position: relative;
            width: 100%;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .mui-slider {
            -webkit-appearance: none;
            appearance: none;
            width: 100%;
            height: 6px;
            background: #ddd;
            border-radius: 5px;
            outline: none;
            transition: background 0.3s;
        }

        .mui-slider:hover {
            background: #ccc;
        }

        .mui-slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 20px;
            height: 20px;
            background: #c8102e;
            border-radius: 50%;
            cursor: pointer;
            transition: background 0.3s;
        }

        .mui-slider::-webkit-slider-thumb:hover {
            background: #dd3350;
        }

        .tooltip {
            position: absolute;
            top: -35px;
            background: #c8102e;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 14px;
            transform: translateX(-50%);
            white-space: nowrap;
            transition: opacity 0.3s, top 0.3s;
            opacity: 0;
        }

        .slider-container:hover .tooltip,
        .slider-container:focus-within .tooltip {
            opacity: 1;
            top: -45px;
        }

        .hidden {
            display: none;
        }

        .submit-button {
            display: block;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            color: white;
            background-color: #c8102e;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .submit-button:hover {
            background-color: #dd3350;
        }
    </style>
</head>
<body>
    <img src="/PPS.svg" alt="Header Image" class="blurred-image">
    <div class="container">
        <h2 class="form-title">Student Skills Form</h2>
        <form action="/student-form/submit" method="POST">
            <div class="form-section">
                <h3 class="section-title">Personal Information</h3>
                <div class="form-field">
                    <label class="field-label">Name:</label>
                    <input type="text" name="name" class="text-input" required>
                </div>
                <div class="form-field">
                    <label class="field-label">Email:</label>
                    <input type="email" name="email" class="text-input" required>
                </div>
                <div class="form-field">
                    <label class="field-label">NUID:</label>
                    <input type="text" name="uid" class="text-input" required>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">Academic Information</h3>
                <div class="form-field">
                    <label class="field-label">Current Year:</label>
                    <select name="pursuingYr" class="select-input" required>
                        <option value="" disabled selected>Select your current academic year</option>
                        <% form.pursuingYr.forEach(yr => { %>
                            <option value="<%= yr %>"><%= yr %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-field">
                    <label class="field-label">Major:</label>
                    <select name="major" class="select-input" required>
                        <option value="" disabled selected>Select your major</option>
                        <% form.majors.forEach(major => { %>
                            <option value="<%= major %>"><%= major %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-field">
                    <label class="field-label">Were you a part of the NUin Program?</label>
                    <div class="radio-group">
                        <label>
                            <input type="radio" name="nuin" value="Yes" onclick="toggleNuinDropdown(true)"> Yes
                        </label>
                        <label>
                            <input type="radio" name="nuin" value="No" onclick="toggleNuinDropdown(false)"> No
                        </label>
                    </div>
                    <div id="experienceDropdown" class="hidden">
                        <label class="field-label">Select NUin Location:</label>
                        <select name="nuinLocation" class="select-input">
                            <option value="" disabled selected>Select Location</option>
                            <% form.nuin.forEach(nuin => { %>
                                <option value="<%= nuin %>"><%= nuin %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">Skills Assessment</h3>
                <% form.skills.forEach(skill => { %>
                    <div class="form-field">
                        <label class="field-label"><%= skill.skillName %>:</label>
                        <div class="slider-container">
                            <span class="tooltip">0</span>
                            <input type="range" name="<%= skill.skillName %>" min="0" max="5" value="0" class="mui-slider" oninput="updateTooltip(this)">
                        </div>
                    </div>
                <% }) %>
            </div>
            <button type="submit" class="submit-button">Submit</button>
        </form>
    </div>

    <script>
        function toggleNuinDropdown(show) {
            const dropdown = document.getElementById('experienceDropdown');
            dropdown.classList.toggle('hidden', !show);
        }

        function updateTooltip(slider) {
            const tooltip = slider.previousElementSibling;
            tooltip.textContent = slider.value;
            tooltip.style.left = `${((slider.value - slider.min) / (slider.max - slider.min)) * 100}%`;
        }
    </script>
</body>
</html>
